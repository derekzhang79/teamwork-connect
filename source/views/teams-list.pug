extends layout

block app-title
	| List
block container	
	div#team-list
		div.row
			div.col-md-6
				h1 Teams
			div.col-md-6
				form.navbar-form.navbar-left
					div.form-group
						input(type="text" placeholder="Search").form-control
					button(type="submit").btn.btn-default Search
		div.row
			div.col-md-4
				h4 Name
			div.col-md-1
				h4 Form
			div.col-md-1
				h4 Date
			div.col-md-1
				h4 GitHub
			div.col-md-3
				h4 Join Team
			div.col-md-1
				h4 Users			
			div.col-md-1
				h4 Edit / Delete
		hr
		each team in result
			div.row
				div.col-md-4
					h4 
						a(href="/teams/" + team.id)= team.name
				div.col-md-1
					em(onclick="test()")
						strong #{team.form}
				div.col-md-1
					if team.createdDate
						em #{team.createdDate.toLocaleDateString()}

				div.col-md-1
					if team.github
						em
							a(href= team.github target="blank") GitHub
					else

				div.col-md-3
					form(method="post" action="/teams/join/" + team.id)
						input(type="submit" value="JOIN").btn.btn-info
				div.col-md-1
					h4 #{team.users.length}
				div.col-md-1
					a(href="/teams/update/" + team.id).glyphicon.glyphicon-edit
					a(href="/teams/remove/" + team.id).glyphicon.glyphicon-remove
