include ../mixins/_flash-messages

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title
            | TeamC App : &nbsp;
            block app-title

        include styles

    body
        nav.navbar.navbar-inverse
            div.container-fluid
                div.navbar-header
                    a(href="/").navbar-brand teamwork-connect
                ul.nav.navbar-nav
                    li.active
                        a(href="/") Home
                    li
                        a(href="/teams") View Teams
                    li
                        a(href="/teams/create") Create Team
                    li
                        a(href="/teams/583eca6d556b593fe0f60980") My Team
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href="/")
                            span.glyphicon.glyphicon-user Sign Up
                    li
                        a(href="/login")
                            span.glyphicon.glyphicon-log-in Login
                    li
                        a(href="/register")
                            span.glyphicon.glyphicon-registration-mark Register

        main.container

            if messages
                +flashMessages(messages)

            block container

        footer

        include scripts